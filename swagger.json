{
    "openapi": "3.0.0",
    "info": {
        "title": "MovieFlix API",
        "description": "API responsável por gerenciar os filmes do MovieFlix",
        "version": "1.0.0"
    },
    "paths": {
        "/movies": {
            "get": {
                "tags": [
                    "Movie"
                ],
                "summary": "Obter todos os filmes",
                "responses": {
                    "200": {
                        "description": "Retorna uma lista de filmes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/movies/{id}": {
            "put": {
                "tags": [
                    "Movie"
                ],
                "summary": "Atualizar um filme",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser atualizado",
                        "schema": {
                            "type": "interger"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MovieInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Filme atualizado com sucesso."
                    },
                    "404": {
                        "descripiton": "Filme não encontrado."
                    },
                    "500": "Falha ao atualizar o filme."
                }
            },
            "delete": {
                "tags": [ "Movie" ],
                "summary": "Remover um filme",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser removido",
                        "schema": {
                            "type": "interger"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Filme removido com sucesso."
                    },
                    "404": {
                        "descripiton": "Filme não encontrado."
                    },
                    "500": "Falha ao remover o filme."
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "interger",
                        "description": "ID do filme"
                    },
                    "title": {
                        "type": "string",
                        "description": "Título do filme"
                    },
                    "genre_id": {
                        "type": "string",
                        "description": "Gênero do filme"
                    },
                    "genres": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "interger",
                                "description": "ID do gênero"
                            },
                            "name": {
                                "type": "string",
                                "description": "Nome do gênero"
                            }
                        }
                    },
                    "language_id": {
                        "type": "string",
                        "description": "Idioma do filme"
                    },
                    "languages": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "interger",
                                "description": "ID da língua"
                            },
                            "name": {
                                "type": "string",
                                "description": "Nome da língua"
                            }
                        }
                    },
                    "oscar_count": {
                        "type": "interger",
                        "description": "Quantidade de oscar ganho pelo filme"
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lançamento do filme"
                    }
                }
            },
            "MovieInput": {
                "type": "object",
                "required": [
                    "title",
                    "genre_id",
                    "language_id",
                    "oscar_count",
                    "release_date"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "descripiton": "Título do filme"
                    },
                    "genre_id": {
                        "type": "interger",
                        "descripiton": "ID do gênero do filme"
                    },
                    "language_id": {
                        "type": "interger",
                        "descripiton": "ID da língua do filme"
                    },
                    "oscar_count": {
                        "type": "interger",
                        "descripiton": "Quantidade de oscar que o filme recebeu"
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "descripiton": "Data de lançamento do filme"
                    }
                }
            }
        }
    }
}